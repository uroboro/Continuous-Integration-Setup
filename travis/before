#!/bin/sh

main() {
	#argc=$#
	#argv=($@)
	#for (( i = 0; i < $argc; i++ )); do
		#echo "argv[$i] = ${argv[$i]}"
	#done

	case "$TRAVIS_OS_NAME" in

	osx)
		brew update;
		brew install dpkg ldid;
		;;

	linux)
		curl -L https://jbdevs.org/sdks/dl/iPhoneOS8.1.sdk.tbz2 | tar -jxf - -C $THEOS/sdks/
		curl -L https://jbdevs.org/sdks/dl/toolchain.zip | unzip - -d $THEOS/toolchain/
		;;

	esac
}

main $0 $@
